<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/toolbar_bg_color"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Staff App"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:contentDescription="Profile Icon"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

         <GridLayout
            android:id="@+id/dashboardGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <!-- Today's Appointments -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAppointments"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                         <!-- Image container with weight for proper distribution -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/calendar"
                                android:contentDescription="Appointments Icon" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today's Appointments"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:paddingHorizontal="4dp" />

                        <TextView
                            android:id="@+id/appointmentsCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12 Appointments"
                            android:textSize="17sp"
                            android:textColor="#666"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingHorizontal="4dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Patient List -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPatients"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/patients"
                                android:contentDescription="Patients Icon" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Patient List"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingHorizontal="4dp"" />

                        <TextView
                            android:id="@+id/patientCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Admitted: 25"
                            android:textSize="17sp"
                            android:textColor="#666"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingHorizontal="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Messages -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMessages"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    card_view:cardCornerRadius="16dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/messages"
                                android:contentDescription="Messages Icon" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Messages"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingHorizontal="4dp" />

                        <TextView
                            android:id="@+id/messageCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 New Messages"
                            android:textSize="17sp"
                            android:textColor="#666"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingHorizontal="4dp"" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Add more cards for Lab Reports, Tasks, etc. -->
           </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Emergency Alert"
        android:src="@drawable/emergency"
        app:backgroundTint="@color/red"
        app:tint="@color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>